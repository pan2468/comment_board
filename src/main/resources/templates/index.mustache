
	{{>layout/header}}

	<div class="container">
		<h4>게시물 조회하기</h4>
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-12">
					<a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
				</div>
			</div>
			<br>
			<!--목록 출력 영역-->
			<table class="table table-horizontal table-bordered">
				<thead class="thead-strong blue">
					<tr>
						<th>게시글 번호</th>
						<th>제목</th>
						<th>작성자</th>
						<th>최종수정일</th>
					</tr>
				</thead>
				<tbody id="tbody">
					{{#posts}}
						<tr>
							<td>{{id}}</td>
							<td><a href="/posts/update/{{id}}">{{title}}</a></td>
							<td>{{author}}</td>
							<td>{{modifiedDate}}</td>
						</tr>
					{{/posts}}
				</tbody>
			</table>
		</div>
	</div>

	{{>layout/footer}}